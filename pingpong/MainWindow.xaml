<Window x:Class="pingpong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pingpong"
        mc:Ignorable="d"
        Title="Ping pong" Height="450" Width="800" Foreground="White" Background="Black" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" KeyDown="Move" Loaded="Window_Loaded">
    <Grid>
        <Label Content="GAME OVER!" Foreground="White" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100" Opacity="0"/>
        <Canvas x:Name="Board">
            <Rectangle x:Name="L" Width="10" Height="75" Fill="White" HorizontalAlignment="Center" Canvas.Left="20" VerticalAlignment="Top" Canvas.Top="170"/>
            <Rectangle x:Name="R" Width="10" Height="75" Fill="White" HorizontalAlignment="Center" Canvas.Left="760" VerticalAlignment="Top" Canvas.Top="170"/>
        </Canvas>
    </Grid>
</Window>
